# Bagy API Credentials (OBRIGATÓRIO)
BAGY_API_KEY=your_bagy_api_key

# GestãoClick API Credentials (OBRIGATÓRIO)
GESTAOCLICK_API_KEY=your_gestaoclick_api_key
GESTAOCLICK_SECRET_KEY=your_gestaoclick_secret_key

# API Base URLs (não modificar a menos que instruído pelo suporte)
BAGY_BASE_URL=https://api.dooca.store
GESTAOCLICK_BASE_URL=https://api.beteltecnologia.com

# Configurações de Sincronização
SYNC_INTERVAL_SECONDS=300  # 5 minutos
MAX_RETRIES=3              # Tentativas em caso de falha
RETRY_DELAY_SECONDS=30     # Tempo entre tentativas

# Configuração para Web Server
PORT=5000                  # Porta para servidor web

# Configurações de Armazenamento
STORAGE_DIR=./data         # Diretório para dados persistentes

# Railway deployment settings (preenchido automaticamente pelo Railway)
# RAILWAY_STATIC_URL=
# DATABASE_URL=

# Configurações de Logging
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR
LOG_DIR=./logs             # Diretório para logs
